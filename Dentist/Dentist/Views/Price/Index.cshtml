@model IEnumerable<Price>
@{
    ViewData["Title"] = "Index";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url(../images/bg_1.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Цены</h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>Блог <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <h1 class="text-center">Цены на услуги</h1>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                @foreach (Price pricetitle in Model)
                {
                    <h3 style="color: #000;">@pricetitle.PriceTitle </h3>
                    <ul class="pl-0">
                        @foreach (PriceDetail detail in pricetitle.PriceDetails)
                        {
                            if (!detail.İsExactly)
                            {
                                <li style="color:black;font-size:19px"> @detail.PriceDetaillName-<b>от @detail.PriceDetailCost грн.</b> </li>
                            }
                            else
                            {
                                <li style="color:black;font-size:19px"> @detail.PriceDetaillName-<b> @detail.PriceDetailCost грн.</b> </li>
                            }

                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</section>

