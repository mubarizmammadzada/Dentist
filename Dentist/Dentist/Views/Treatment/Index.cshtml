@model IEnumerable<Treatment>
@{
    ViewData["Title"] = "Index";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url(../images/bg_1.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">
                    Наши Услуги
                </h1>
                <p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>Сервисы <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-services">
    <div class="container">
        <div class="row">
            @foreach (Treatment treatment in Model)
            {
                <div class="col-md-4 d-flex services align-self-stretch p-4 ftco-animate">
                    <div class="media block-6 d-block w-100">
                        <a href="@Url.Action("Detail","Treatment",new { slug=treatment.Slug})">
                            <div class="img w-100 rounded-circle" style=" background-image: url(../images/@treatment.Image);"></div>
                        </a>

                        <div class="media-body p-2 mt-3">
                            <a href="@Url.Action("Detail","Treatment",new { slug=treatment.Slug})">
                                <h3 style="        text-align: center" class="heading">@treatment.TreatmentName</h3>
                            </a>

                           

                        </div>
                    </div>
                </div>


            }

        </div>
    </div>
</section>

