@model IEnumerable<Doctor>
@{
    ViewData["Title"] = "Index";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">
                    Наш Стоматолог
                </h1>
                <p class="breadcrumbs">
                    <span class="mr-2"><a href="index.html">Главная <i class="ion-ios-arrow-forward"></i></a></span> <span>
                        Стоматологи <i class="ion-ios-arrow-forward"></i>
                    </span>
                </p>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row">
            @foreach (Doctor doctor in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="staff">
                        <div class="img-wrap d-flex align-items-stretch">
                            <a href="@Url.Action("Detail","Doctor",new { slug=doctor.Slug })" class="img align-self-stretch" style="background-image: url(../images/@doctor.Image);">
                               
                            </a>
                           
                        </div>
                        <div class="text pt-3 text-center">
                            <h3>Dr. @doctor.FullName</h3>
                            <span class="position mb-2">@doctor.Profession</span>
                           
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
