@model Treatment
@{
    ViewData["Title"] = "Edit";
}
<style>
    .ck-editor__editable {
        background-color: black !important;
    }
</style>

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Slider</h4>
            <div class="row">
                <img style="width:300px !important;height:300px !important" src="~/images/@Model.Image" alt="Alternate Text" />
            </div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo" class="mt-3"></label>
                    <input class="form-control " asp-for="Photo" accept="image/*">
                    <span asp-validation-for="Photo" style="display:block" class="text-danger"> </span>
                    <label asp-for="TreatmentName" class="mt-3"></label>
                    <input class="form-control" asp-for="TreatmentName">
                    <span asp-validation-for="TreatmentName" style="display:block" class="text-danger"></span>
                    <label asp-for="About" class="mt-3"></label>
                    <textarea asp-for="About" id="editor"> </textarea>





                    <span asp-validation-for="About" style="display:block" class="text-danger"> </span>


                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-action="Index" class="btn btn-dribbble">Go Back</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/20.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });

    </script>

}

