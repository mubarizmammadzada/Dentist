@model IEnumerable<Treatment>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Treatment Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="Treatment" asp-action="Create" class="btn btn-github mt-3">Create Treatment</a>
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Treatment Name
                                </th>
                                <th>
                                    About
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Treatment treatment in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width:150px !important;height:90px !important ;border-radius:0;" src="~/images/@treatment.Image" alt="image" />
                                    </td>
                                    <td>
                                        <span>@treatment.TreatmentName</span>
                                    </td>
                                    <td>
                                        @if (treatment.About.Length > 50)
                                        {
                                            <span>@treatment.About.Substring(0, 50)</span> <span>...</span>
                                        }
                                        else
                                        {
                                           @Html.Raw(treatment.About)
                                        }
                                    </td>
                                    <td>

                                        <a asp-controller="Treatment" asp-action="Edit" asp-route-id="@treatment.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>
                                        <a asp-controller="Treatment" asp-action="Delete" asp-route-id="@treatment.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

