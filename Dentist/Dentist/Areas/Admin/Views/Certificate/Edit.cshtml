@using Dentist.Areas.Admin.ViewModels
@model DoctorVM
@{
    ViewData["Title"] = "Edit";
}


@section Css{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
}
<div class="col-lg-3 col-md-12 col-sm-12 col-12">
    <img class="img-fluid" src="~/images/@Model.Certificate.Image"  />
    <p>@Model.Certificate.DoctorId</p>
</div>
<div asp-validation-summary="ModelOnly" class="alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div class="mt-3">
        <input asp-for="Certificate.Photo" class="form-control" />
        <span asp-validation-for="Certificate.Photo"></span>
    </div>
    <div class="mt-3">
        <input  asp-for="Certificate.Doctor.FullName" style="color:black" class="form-control" disabled />
        <span asp-validation-for="Certificate.Doctor"></span>
    </div>
    <div class="mt-3">
        <select class="form-control" id="selectCategory" name="doctors">
            @foreach (Doctor doctor in Model.Doctors)
            {
                <option value="@doctor.FullName">@doctor.FullName (@doctor.Gmail)</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success mt-5">Edit Certificate</button>

</form>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $('.js-example-basic-multiple').select2();
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


}

