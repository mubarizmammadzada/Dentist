@model Doctor
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Slider</h4>
                <div class="row">
                    <img style="width:300px !important;height:300px !important" src="~/images/@Model.Image" alt="Alternate Text" />
                </div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Photo" class="mt-2"></label>
                            <input class="form-control" asp-for="Photo" accept="image/*">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                            <label asp-for="FullName" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="FullName" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                            <label asp-for="About" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="About" />
                            <span asp-validation-for="About" class="text-danger"></span>
                            <label asp-for="Profession" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="Profession" />
                            <span asp-validation-for="Profession" class="text-danger"></span>
                            <label asp-for="Facebook" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="Facebook" />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                            <label asp-for="Instagram" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="Instagram" />
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                            <label asp-for="Twitter" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="Twitter" />
                            <span asp-validation-for="Twitter" class="text-danger"></span>
                            <label asp-for="Gmail" style="display:block" class="mt-2"></label>
                            <input class="form-control" asp-for="Gmail" />
                            <span asp-validation-for="Gmail" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2 mb-3">Submit</button>
                    <a asp-action="Index" class="btn btn-dribbble  mb-3">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

