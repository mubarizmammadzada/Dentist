@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="Blog" asp-action="Create" class="btn btn-github mt-3">Create Blog</a>
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Blog Name
                                </th>
                                <th>
                                    Blog Description
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Blog blog in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width:150px !important;height:90px !important ;border-radius:0;" src="~/images/@blog.Image" alt="image" />
                                    </td>
                                    <td>
                                        <span>@blog.BlogName</span>
                                    </td>
                                    <td>
                                        @if (blog.Description.Length > 50)
                                        {
                                            <span>@Html.Raw(blog.Description.Substring(0, 50))</span> <span>...</span>
                                        }
                                        else
                                        {
                                            @Html.Raw(blog.Description)
                                        }
                                    </td>
                                    <td>

                                        <a asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>
                                        <a asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

