@model IEnumerable<Patient>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="Patient" asp-action="Create" asp-area="Admin" class="btn btn-github mt-3">Create Patient</a>
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Patient FullName
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Patient patient in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width:150px !important;height:90px !important ;border-radius:0;" src="../images/@patient.Image" alt="image" />
                                    </td>
                                    <td>
                                        <span>@patient.FullName</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>
                                        <a asp-controller="Patient" asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>