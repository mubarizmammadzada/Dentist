@model IEnumerable<Portfolio>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Portfolio Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="Portfolio" asp-action="Create" class="btn btn-github mt-3">Create Portfolio</a>
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Portfolio portfolio in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width:150px !important;height:90px !important ;border-radius:0;" src="~/images/@portfolio.Image" alt="image" />
                                    </td>
                                    <td>
                                        <a asp-controller="Portfolio" asp-action="Delete" asp-route-id="@portfolio.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

