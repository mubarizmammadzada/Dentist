@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="Account" asp-action="Create" class="btn btn-github mt-3">Create Account</a>
                        <thead>
                            <tr>
                                <th>
                                    Admin UserName
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AppUser user in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        @user.UserName
                                    </td>
                                    <td>
                                        <a asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

