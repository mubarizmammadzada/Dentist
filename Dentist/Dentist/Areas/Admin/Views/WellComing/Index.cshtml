@model WellComing
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Welcoming Title
                                </th>
                                <th>
                                    Welcoming Description
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td class="py-1">
                                    <img style="width:150px !important;height:90px !important ;border-radius:0;" src="~/images/@Model.Image" alt="image" />
                                </td>
                                <td>
                                    <span>@Model.WelcomeTitle</span>
                                </td>
                                <td>
                                    @if (Model.Description.Length > 50)
                                    {
                                        <span>@Model.Description.Substring(0, 50)</span> <span>...</span>
                                    }
                                    else
                                    {
                                        @Model.Description;
                                    }
                                </td>

                                <td>

                                    <a asp-controller="WellComing" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>

                                </td>
                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

