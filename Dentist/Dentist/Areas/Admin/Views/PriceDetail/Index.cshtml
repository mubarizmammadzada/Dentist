@model IEnumerable<PriceDetail>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Doctor Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a asp-controller="PriceDetail" asp-action="Create" class="btn btn-github mt-3">Create Service Price</a>
                        <thead>
                            <tr>

                                <th>
                                    Service PriceDetail Name
                                </th>

                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PriceDetail price in Model)
                            {
                                <tr>

                                    <td>
                                        <span>@price.PriceDetaillName</span>
                                    </td>

                                    <td>
                                        <a asp-controller="PriceDetail" asp-action="Edit" asp-route-id="@price.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>
                                        <a asp-controller="PriceDetail" asp-action="Delete" asp-route-id="@price.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

