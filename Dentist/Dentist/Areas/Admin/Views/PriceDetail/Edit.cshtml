@using Dentist.Areas.Admin.ViewModels
@model PriceVM
@{
    ViewData["Title"] = "Edit";
}


@section Css{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
}
<div asp-validation-summary="ModelOnly" class="alert-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div class="mt-3">
        <input asp-for="PriceDetail.PriceDetaillName" class="form-control" />
        <span asp-validation-for="PriceDetail.PriceDetaillName"></span>
    </div>
    <div class="mt-3">
        <input asp-for="PriceDetail.PriceDetailCost" class="form-control" />
        <span asp-validation-for="PriceDetail.PriceDetailCost"></span>
    </div>


    <div class="mt-3">
        <select class="form-control" id="selectCategory" name="prices">
            @foreach (Price price in Model.Prices)
            {
                <option value="@price.PriceTitle">@price.PriceTitle </option>
            }
        </select>
    </div>
    <div class="mt-3">
        <select class="form-control" id="selectCategory" name="isexacts">

            <option value="true">True</option>
            <option value="false">False</option>

        </select>
    </div>
    <button type="submit" class="btn btn-success mt-5">Create Certificate</button>

</form>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $('.js-example-basic-multiple').select2();
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


}

